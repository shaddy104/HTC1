<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.shadrach.htc.youth_main"
    android:orientation="vertical"
    android:background="#5d6bff">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentTop="true"
        android:padding="5dp"
        android:background="#DDDDDD"
        android:id="@+id/linearLayout2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:gravity="center">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:id="@+id/linearLayout"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:gravity="center">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageView2"
                android:src="@drawable/ic_stars_black_24dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Youth Fellowship"
                android:id="@+id/textView156"
                android:textSize="20sp" />

        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:background="#6291ff"
            android:layout_weight="1"
            android:id="@+id/linearLayout3">
            <ImageButton
                android:layout_width="90dp"
                android:layout_height="60dp"
                android:id="@+id/imageButton"
                android:src="@drawable/ic_details_black_24dp"
                android:background="#DDDDDD"
                android:layout_gravity="right"
                android:layout_weight="1" />

        </LinearLayout>

    </LinearLayout>


    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:weightSum="1"
        android:id="@+id/M"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:baselineAligned="false"
        android:layout_below="@+id/linearLayout2"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingTop="20dp"
        android:background="#6291ff"
        android:paddingBottom="20dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Holy Trinity Church"
            android:id="@+id/textView157"
            android:textSize="15sp"
            android:textColor="#000000" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_below="@+id/M"
        android:background="#6291ff"
        android:layout_weight="1"
        android:id="@+id/M1">

        <ImageButton
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/imageButton2"
            android:src="@mipmap/bible_icon"
            android:background="#6291ff"
            android:layout_weight="1"
            android:onClick="OnClickBibleYouth"          />

        <ImageButton
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/imageButton3"
            android:src="@drawable/ic_announcement_black_24dp"
            android:background="#6291ff"
            android:layout_weight="1"
            android:layout_gravity="center_horizontal"
            android:onClick="OnClickViewAll"/>

        <ImageButton
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/imageButton4"
            android:src="@drawable/ic_person_add_black_24dp"
            android:background="#6291ff"
            android:layout_weight="1"
            android:layout_gravity="right"
            android:onClick="OnClickAddContact"/>

    </LinearLayout>





    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/linearLayout4"
        android:background="#DDDDDD"
        android:layout_below="@+id/M1"
        android:layout_marginTop="30dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView3"
            android:src="@drawable/ic_info_outline_black_24dp"
            android:layout_marginLeft="10dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Sync Activity"
            android:id="@+id/textView151"
            android:textSize="15sp"
            android:layout_weight="1"
            android:layout_marginLeft="15dp"
            android:textColor="#000000" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linearLayout4"
        android:layout_centerHorizontal="true"
        android:layout_weight="1"
        android:background="#6291ff">

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="150dp"
            android:id="@+id/imageButton5"
            android:src="@mipmap/birthday"
            android:layout_weight="1"
            android:background="#6291ff"
            android:adjustViewBounds="false"
            android:onClick="OnClickBirthday"/>

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="150dp"
            android:id="@+id/imageButton6"
            android:src="@mipmap/musics"
            android:layout_weight="1"
            android:background="#6291ff"
            android:onClick="OnClickMusic"/>
    </LinearLayout>

</RelativeLayout>

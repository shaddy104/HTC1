<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.shadrach.htc.marriageService"
    android:background="@drawable/marriageservice">

    <Button
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:text="@string/marriageIntrBtn"
        android:id="@+id/button9"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="105dp"
        android:onClick="OnMarriageIntroListener"
        android:background="@mipmap/buttonbackground" />

    <Button
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:text="@string/TheMarriageBtn"
        android:id="@+id/button10"
        android:layout_below="@+id/button9"
        android:layout_marginTop="50dp"
        android:layout_centerHorizontal="true"
        android:onClick="OnTheMarriageClickListener"
        android:background="@mipmap/buttonbackground" />

    <Button
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:text="@string/MarriagePrayerBtn"
        android:id="@+id/button11"
        android:layout_below="@+id/button10"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:onClick="OnThePrayerClickListener"
        android:background="@mipmap/buttonbackground" />
</RelativeLayout>

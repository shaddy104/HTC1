<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@drawable/layoutbackground">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:gravity="center">


            <Button
        style="@style/Bigbutton"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:text="@string/marriageServiceButtonStr"
        android:id="@+id/button3"
        android:layout_above="@+id/button2"
        android:layout_alignLeft="@+id/button2"
        android:layout_alignStart="@+id/button2"
        android:layout_marginBottom="20dp"
        android:onClick="OnClickMarriageServiceListener"/>

    <Button
        style="@style/Bigbutton"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:text="@string/HolyBaptButtonStr"
        android:id="@+id/button4"
        android:layout_below="@+id/button_specialevent"
        android:layout_centerHorizontal="true"
         android:layout_marginBottom="20dp"/>

    <Button
        style="@style/Bigbutton"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:text="@string/confServStr"
        android:id="@+id/button5"
        android:layout_below="@+id/button4"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="50dp"
        android:onClick="OnClickLordsPrayer"/>
        </LinearLayout>



</ScrollView>

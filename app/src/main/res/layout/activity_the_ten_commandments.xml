<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.shadrach.htc.the_ten_commandments"
    android:background="@drawable/buttonbackground">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin">


        <TextView
            style="@style/Minister"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="1. I am the Lord your God. You shall have no other gods before me."
            android:id="@+id/textView52"
            android:layout_gravity="center_horizontal" />

        <TextView
            style="@style/EveryOne"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Lord, have mercy upon us, and incline our hearts to keep this law."
            android:id="@+id/textView53"
            android:layout_gravity="center_horizontal" />

        <TextView
            style="@style/Minister"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="2. You shall not make for yourself a graven image, or any likeness of anything that is in heaven above, or that is in the earth beneath, or that is in the water under the earth; you shall not bow down to them or serve them."
            android:id="@+id/textView54"
            android:layout_gravity="center_horizontal" />

        <TextView
            style="@style/EveryOne"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Lord, have mercy upon us, and incline our hearts to keep this law."
            android:id="@+id/textView55"
            android:layout_gravity="center_horizontal" />

        <TextView
            style="@style/Minister"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="3. You shall not take the name of the Lord your God in vain."
            android:id="@+id/textView56"
            android:layout_gravity="center_horizontal" />

        <TextView
            style="@style/EveryOne"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Lord, have mercy upon us, and incline our hearts to keep this law."
            android:id="@+id/textView57"
            android:layout_gravity="center_horizontal" />

        <TextView
            style="@style/Minister"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="4. Remember the sabbath day, to keep it Holy. Six days you shall labour, and do all your work; but the seventh day is a sabbath to the Lord your God."
            android:id="@+id/textView58"
            android:layout_gravity="center_horizontal" />

        <TextView
            style="@style/EveryOne"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Lord, have mercy upon us, and incline our hearts to keep this law."
            android:id="@+id/textView59"
            android:layout_gravity="center_horizontal" />

        <TextView
            style="@style/Minister"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="5. Honour your father and your mother."
            android:id="@+id/textView60"
            android:layout_gravity="center_horizontal" />

        <TextView
            style="@style/EveryOne"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Lord, have mercy upon us, and incline our hearts to keep this law."
            android:id="@+id/textView61"
            android:layout_gravity="center_horizontal" />

        <TextView
            style="@style/Minister"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="6. You shall not kill."
            android:id="@+id/textView62"
            android:layout_gravity="center_horizontal" />

        <TextView
            style="@style/EveryOne"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Lord, have mercy upon us, and incline our hearts to keep this law."
            android:id="@+id/textView63"
            android:layout_gravity="center_horizontal" />

        <TextView
            style="@style/Minister"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="7. You shall not commit adultery."
            android:id="@+id/textView64"
            android:layout_gravity="center_horizontal" />

        <TextView
            style="@style/EveryOne"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Lord, have mercy upon us, and incline our hearts to keep this law."
            android:id="@+id/textView65"
            android:layout_gravity="center_horizontal" />

        <TextView
            style="@style/Minister"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="8. You shall not steal."
            android:id="@+id/textView66"
            android:layout_gravity="center_horizontal" />

        <TextView
            style="@style/EveryOne"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Lord, have mercy upon us, and incline our hearts to keep this law."
            android:id="@+id/textView67"
            android:layout_gravity="center_horizontal" />

        <TextView
            style="@style/Minister"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="9. You shall not bear false witness."
            android:id="@+id/textView68"
            android:layout_gravity="center_horizontal" />

        <TextView
            style="@style/EveryOne"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Lord, have mercy upon us, and incline our hearts to keep this law."
            android:id="@+id/textView69"
            android:layout_gravity="center_horizontal" />

        <TextView
            style="@style/Minister"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="10. You shall not covet."
            android:id="@+id/textView70"
            android:layout_gravity="center_horizontal" />

        <TextView
            style="@style/EveryOne"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="\t\t\tLord, have mercy upon us, and write all these Thy laws in our hearts, we beseech Thee."
            android:id="@+id/textView71"
            android:layout_gravity="center_horizontal" />
    </LinearLayout>



</ScrollView>
